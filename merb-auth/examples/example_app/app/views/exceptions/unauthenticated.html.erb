<h3>Login</h3>

<% if @exception -%>
  <p class="error"><%= @exception.message -%></p>
<% end -%>

<div>
 <h3>Use Login and Password:</h3>
	<form action="<%= url(:'merb_auth_perform_login') %>" method="POST" accept-charset="utf-8">
	  <input type="hidden" name="_method" value="PUT" />
	  <div class="formRow">
	    <label>Login: <input type="text" name="login" value="" id="login"></label>
	  </div> <!-- close: formRow -->
	  <div class="formRow">
	    <label>Password:<input type="password" name="password" value="" id="password"></label>
	  </div> <!-- close: formRow -->
	  <div class="formRow">
	    <input type="submit" name="Submit" value="Log In" id="Submit">
	  </div> <!-- close: formRow -->
	</form>
</div>
<br/>
<div>
  <h3>Use OpenID</h3>
  <form action="<%= url(:openid) %>" >
    <input type="text" name="openid_url" />
    <input type="submit" value="Open ID" />
  </form>
</div>
